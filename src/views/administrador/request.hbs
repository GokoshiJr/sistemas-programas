<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 mt-3">
      <div class="card border-light">
        <div class="card-header bg-light text-center">
          <b><h4>Inventario Almacen Norte</h4></b>
        </div>
        <table class="table text-center table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Código</th>
              <th>Producto</th>
              <th>Cantidad de Lotes</th>
            </tr>
          </thead>
          {{#each productos}}
            <tr>
              <td>{{codigo}}</td>
              <td>{{nombre}}</td>
              {{#if cantidad}}
                  <td>{{cantidad}}</td>
              {{else}}
                  <td>No hay en stock</td>
              {{/if}}
            </tr>
          {{/each}}
        </table>
      </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
      <div class="card-header text-center">
        Tareas del Almacen Norte por Autorizar
      </div>
        {{#each instrucciones}}
          <div class="card border-light">
            <h5 class="card-header text-white bg-primary">{{tipo}}</h5>
            <div class="card-body">
              <h5 class="card-title">{{producto}}</h5>
              <p class="card-text">{{especificacion}}.</p>
              <input type="checkbox" class="form-check-input ml-1" id="exampleCheck1">
              <label class="form-check-label ml-4" for="exampleCheck1">Autorizar</label>
            </div>
          </div>
        {{/each}}
        <button class="btn btn-outline-dark">Enviar Autorizaciones</button>
    </div>
  </div>
  
