<div class="container text-center mt-2">
  <h1>Usuarios</h1>
  <div class="container mb-2">
    <div class="row">
      <div class="col-lg-1">
        <a href="/users/create" class="btn btn-success">Nuevo</a>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table id="tablaProductos" class="table table-striped table-bordered table-condensed"
          style="width:100%">
            <thead class="text-center">
              <tr>
                <th>ID del usuario</th>
                <th>ID del empleado</th>
                <th>Correo</th>
                <th>Clave</th>
                <th>Estatus</th>
                <th>Sector</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody class="text-center">
              {{#each data}}
                <tr>
                  <td>{{usuario_id}}</td>
                  <td>{{empleado_id}}</td>
                  <td>{{correo}}</td>
                  <td>{{clave}}</td>
                  <td>{{estatus}}</td>
                  <td>{{sector}}</td>
                  <td>
                    <a href="/users/update/{{usuario_id}}" class="btn btn-primary m-1">Editar</a>
                    <a href="/users/delete/{{usuario_id}}" class="btn btn-danger m-1">Eliminar</a>
                  </td>
                  </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
