<div class="container">
  <div class="row m-3">
    <div class="col-lg-6 col-md-8 col-sm-12 mx-auto">
      <div class="card border-light">
        <div class="card-header bg-dark text-white text-center">Modificar Usuario</div>
        <div class="card-body">
          {{#each data}}
            <form action="/users/update/{{usuario_id}}" method="POST">
                <div class="form-group">
                  <label for="correo_input">Correo</label>
                  <input id="correo_input" name="correo" type="email" class="form-control" value="{{correo}}">
                </div>
                <div class="form-group">
                  <label for="clave_input">Clave</label>
                  <input name="clave" type="password" maxlength="8" class="form-control" id="clave_input"
                    value="{{clave}}">
                </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
